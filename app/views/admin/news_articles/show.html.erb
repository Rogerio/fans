<%- model_class = NewsArticle -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<section>
	<small><%= @news_article.section.name %></small>
  <h2><%= @news_article.head %></h2>
  <h5><%= @news_article.subhead %></h5>
	<div>
		<%= @news_article.body.html_safe %>
	</div>
</section>




<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_news_articles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_news_article_path(@news_article), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_news_article_path(@news_article),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
