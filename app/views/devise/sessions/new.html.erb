<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-horizontal") do |f| %>

	<legend><%=t ".title" %></legend>

  <div class="control-group">
		<%= f.label :email, :class => "control-label" %>
		<div class="controls">
  		<%= f.email_field :email %>
		</div>
	</div>

  <div class="control-group">
		<%= f.label :password %>
  	<div class="controls"><%= f.password_field :password %></div>
	</div>


  <div class="control-group">
		<div id="controls">
			<label class="checkbox"><%= f.check_box :remember_me %> <%=t ".remember_me" %></label>			
		</div>
		<div class="controls">
			<%= f.submit t(".submit"), :class => "btn btn-primary" %>
		</div>
	</div>
<% end %>

<%= render "devise/shared/links" %>