<%= form_for @photo, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <div class="control-group">
    <%= f.label :caption, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :caption, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :news_article_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :news_article_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :picture, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :picture %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                photos_path, :class => 'btn' %>
  </div>
<% end %>
